---
import Breadcrumbs from "@components/Breadcrumbs.astro";

export interface Props {
  pageTitle: string;
  pageDesc?: string;
}

const { pageTitle, pageDesc } = Astro.props;
---

<main id="main-content">
  <div class={`mx-auto flex w-full max-w-3xl px-4 ${Astro.url.pathname.startsWith("/ar") ? "justify-end" : "justify-start"}`}>
    <Breadcrumbs />
  </div>
  <h1>{pageTitle}</h1>
  <p>{pageDesc}</p>
  <slot />
</main>

<style>
  #main-content {
    @apply mx-auto w-full max-w-3xl px-4 pb-12;
  }
  #main-content h1 {
    @apply text-2xl font-semibold sm:text-3xl;
  }
  #main-content p {
    @apply mt-2 mb-6 italic;
  }
</style>
